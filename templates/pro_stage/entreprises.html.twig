{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
     
        <div class="container-fluid">
            <div class="row">
                <div class="col-10 offset-1 mt-4">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="../">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Entreprises</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row">  </div>
            <div class="row">
                <div class="col-10 offset-1">

                <div class="p-3 border bg-light">
                    <h2>Voici les stages proposés par la formation suivante : {{ ressourcesEntreprise.nom }}</h2><BR>
                    {% for stage in ressourcesStagesParEntreprise  %}
                        <div class="card-body mb-4">
                            <div class="card-header bg-success">
                                <a href="../../stages/{{ stage.id }}" class="text-white text-decoration-none"><h2>{{ stage.titre }}</h2></a>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><h6>Email : {{ stage.email }}</li>
                                </ul>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
            </div>
        </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
    crossorigin="anonymous"></script>

{% endblock %}
